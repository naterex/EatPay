<div class="row">
<div class="col-md-4 col-md-offset-4">

    <div class="card hovercard">
        <div class="cardheader">

        </div>
        <div class="avatar">
            <!-- <img alt="" src="https://s3.amazonaws.com/uifaces/faces/twitter/madysondesigns/73.jpg"> -->
            <%= gravatar_image_tag(@user.email.gsub('spam', 'mdeering'), :alt => '', :gravatar => { :secure => true } ) %>
        </div>
        <div class="info">
            <!-- <div class="title">
                <h4>Zulhilmi Zainudin</h4>
            </div> -->

            <div class="desc">User ID: <%= @user.id %></div>
            <div class="desc">Email: <%= @user.email %></div>
            <div class="desc role"><span class="label label-warning"><%= @user.role.name %></span></div>
            <br>
            <%= link_to edit_user_registration_url, class: "btn btn-primary" do %>Edit my profile <i class="fa fa-pencil-square-o"></i><% end %>
        </div>
    </div>

</div>
</div>