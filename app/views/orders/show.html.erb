
<h1>
  <%= @order.table_number %>
</h1>

<% if @order.foods_orders.present? %>
  <h3>Foods: </h3>
  <ul>
    <% @order.foods_orders.each do |co| %> 
      <li><%= co.food.name %> | Quantity: <%= co.quantity%> | Status: <%= co.status%> | Takeaway: 
        <% if co.takeaway == true %>
          Yes
          <% else %>
          No
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
  
<% if @order.drinks_orders.present? %>
<h3>Drinks: </h3>
  <ul>
    <% @order.drinks_orders.each do |co| %> 
      <li><%= co.drink.name %> | Quantity: <%= co.quantity%> | Status: <%= co.status%> | Takeaway:
        <% if co.takeaway == true %>
          Yes
          <% else %>
          No
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<table class="qr-code">
<% @qr.modules.each_index do |x| %>
  <tr>
  <% @qr.modules.each_index do |y| %>
   <% if @qr.dark?(x,y) %>
    <td class="black"/>
   <% else %>
    <td class="white"/>
   <% end %>
  <% end %>
  </tr>
<% end %>
</table>
<br />
<br />

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
