<h3>All Orders</h3>
<%#= link_to 'New order', new_order_path, class: "btn btn-primary pull-right" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Table No</th>
      <th>Foods</th>
      <th>Drinks</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    
      <% @orders.each do |order| %>
      <% if order.foods_orders.first.try(:status) == 0 || order.drinks_orders.first.try(:status) == 0 %>
        <tr>
          <td><%= order.table_number %></td>
          <td>
            <% order.foods_orders.each do |c| %>
              <p><%= c.food.try(:name) %> ( <%= c.quantity %>x )</p>
            <% end %>
          </td>
          <td>
            <% order.drinks_orders.each do |d| %>
              <p><%= d.drink.try(:name) %> ( <%= d.quantity %>x )</p>
            <% end %>
          </td>
          <td><%#= link_to 'Show', order, class: "btn btn-primary" %></td>
          <td class="vert-align"><%= link_to 'Edit', edit_order_path(order), class: "btn btn-primary" %></td>
          <td class="vert-align"><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      <% end %>
    
  </tbody>
</table>