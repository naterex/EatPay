<!DOCTYPE html>
<html>
<head>
  <title>Ordr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to 'Ordr', root_url, class: "navbar-brand" %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><%= link_to 'Manage Foods', foods_url %></li>
	        <li><%= link_to 'Manage Drinks', drinks_url %></li>
	        <li><%= link_to 'Manage Users', users_url %></li>
	      </ul>
	      
	      <ul class="nav navbar-nav navbar-right">

			<% if current_user %>

			<li class="new-order-btn">
	      	<form class="navbar-form navbar-left">
	      		<%= link_to 'New Order', new_order_url, class: "btn btn-primary" %>
		      </form>
			</li>

	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %><span class="caret"></span></a>
	          <ul class="dropdown-menu">
	            <li><%= link_to 'Profile', user_path(current_user.id) %></li>
	            <li role="separator" class="divider"></li>
	            <li><a href="#"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></a></li>
	          </ul>
	        </li>
	        <% else %>
		        <li class="new-order-btn">
		      	<form class="navbar-form navbar-left">
		      		<%= link_to 'Login', new_user_session_url, class: "btn btn-success" %>
		      		<%= link_to 'Register', new_user_registration_url, class: "btn btn-primary" %>
			      </form>
				</li>
	        <% end %>

	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>

	<div class="container">

	<%= yield %>
</div>
</body>
</html>
