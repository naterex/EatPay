<p id="notice"><%= notice %></p>

<h3>Foods</h3>
<%= link_to new_food_path, class: "btn btn-primary" do %>Add Food <i class="fa fa-plus"></i><% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each_with_index do |food, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= food.name %></td>
        <td>$<%= food.price %></td>
        <!-- <td><%= link_to 'Show', food, class: "btn btn-default" %></td> -->
        <td><%= link_to edit_food_path(food), class: "btn btn-primary" do %>Edit <i class="fa fa-pencil-square-o"></i><% end %></td>
        <td><%= link_to food, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete <i class="fa fa-trash-o"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
