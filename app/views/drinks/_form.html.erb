<div class="col-md-4">

<%= form_for(@drink) do |f| %>
  <% if @drink.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@drink.errors.count, "error") %> prohibited this drink from being saved:</p>

      <ul>
      <% @drink.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <%= f.button :submit, class: "btn btn-primary" do %>Save Drink <i class='fa fa-check'></i><% end %>
  <%= link_to drinks_path, class: "btn btn-default" do %>Back<% end %>
<% end %>

</div>
