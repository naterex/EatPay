<p id="notice"><%= notice %></p>

<h3>Drinks</h3>
<%= link_to new_drink_path, class: "btn btn-primary" do %>New Drink <i class="fa fa-plus"></i><% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each_with_index do |drink, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= drink.name %></td>
        <td>$<%= drink.price %></td>
        <!-- <td><%= link_to 'Show', drink %></td> -->
        <td><%= link_to edit_drink_path(drink), class: "btn btn-primary" do %>Edit <i class="fa fa-pencil-square-o"></i><% end %></td>
        <td><%= link_to drink, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete <i class="fa fa-trash-o"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
